<h1>Sign In </h1>

<%= link_to "Sign Up", new_user_path %>
<br>
<br>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%=form_tag('/signin', method: "post") do%>
<%= label_tag :email %>
<%= text_field_tag :email %>
<%= label_tag :password %>
<%= password_field_tag :password %>
<%= submit_tag "Sign In" %>
<% end %>
